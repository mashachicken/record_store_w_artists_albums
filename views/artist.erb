<h2>Artist Name: <%= @artist.name %></h2>

<h3>Artist Albums</h3>

  <% if @artist.albums.any? %>
    <ul>
      <% @artist.albums.each do |album| %>
        <li><a href="/artists/<%= @artist.id %>/albums/<%= album.id %>"><%= album.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no albums listed for this artist yet.</p>
  <% end %>

<h4>Add an album:</h4>

<form action="/artists/<%= @artist.id %>/albums" method="post">
  <div class="form-group">
    <label for="album_name">Album name</label>
    <input id="album_name" name="album_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add album</button>
</form>

<form action="/artists/<%= @artist.id() %>/edit" method="get">
  <input name="_method" type="hidden" value="edit">
  <button type="submit">Edit Artist</button>
</form>

<p><a href="/artists">Return to artist list</a></p>
